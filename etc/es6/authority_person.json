{
  "settings": {
    "index": {
      "number_of_shards": "1",
      "number_of_replicas": "0"
    },
    "analysis": {
      "analyzer": {
        "text_default": {
          "tokenizer": "standard",
          "filter": ["icu_folding"]
        },
        "lowercase": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "mappings": {
    "authority_person": {
      "dynamic": "false",
      "date_detection": false,
      "numeric_detection": false,
      "properties": {
        "active": {
          "type": "boolean"
        },
        "all": {
          "type": "text",
          "analyzer": "text_default"
        },
        "date_created": {
          "type": "date"
        },
        "date_updated": {
          "type": "date"
        },
        "email": {
          "type": "text",
          "analyzer": "lowercase"
        },
        "first_name": {
          "type": "text",
          "analyzer": "text_default",
          "copy_to": [
            "all"
          ]
        },
        "full_name": {
          "type": "text",
          "analyzer": "text_default",
          "copy_to": [
            "all"
          ]
        },
        "job_category": {
          "type": "text",
          "analyzer": "lowercase"
        },
        "last_name": {
          "type": "text",
          "analyzer": "text_default",
          "copy_to": [
            "all"
          ]
        },
        "orcid": {
          "type": "keyword"
        },
        "organization_id": {
          "type": "keyword"
        },
        "other_id": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "type": {
              "type": "keyword"
            }
          }
        },
        "preferred_first_name": {
          "type": "text",
          "analyzer": "text_default"
        },
        "preferred_last_name": {
          "type": "text",
          "analyzer": "text_default"
        },
        "title": {
          "type": "text",
          "analyzer": "text_default"
        }
      }
    }
  }
}


